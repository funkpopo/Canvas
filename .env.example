# Canvas 项目环境变量示例文件
# 复制此文件为 .env 并填写实际值

# ===========================================
# 后端配置 (Backend Configuration)
# ===========================================

# JWT密钥（生产环境必须修改！）
# 生成方法: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256

# JWT Token过期时间（分钟）
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库配置
# DATABASE_TYPE: sqlite 或 mysql
DATABASE_TYPE=sqlite

# MySQL配置（仅当 DATABASE_TYPE=mysql 时需要）
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=canvas
DATABASE_USER=canvas
DATABASE_PASSWORD=canvas123

# Redis配置（可选，用于缓存和会话管理）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# CORS配置（允许的前端域名，多个域名用逗号分隔）
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# 前端配置 (Frontend Configuration)
# ===========================================

# API基础URL
NEXT_PUBLIC_API_URL=http://localhost:8000/api/

# WebSocket URL（如果与API URL不同）
# NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws/

# ===========================================
# 生产环境配置 (Production Configuration)
# ===========================================

# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 是否启用调试模式
DEBUG=false
