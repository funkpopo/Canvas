{
  "compilerOptions": {
    // Next.js 16 支持更新的目标
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    // Next.js 16 增强的插件配置
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // Next.js 16 改进的类型检查选项（逐步启用）
    // "exactOptionalPropertyTypes": true, // 暂时禁用，避免现有代码兼容性问题
    "noImplicitOverride": true, // 要求显式 override 关键字
    "noImplicitReturns": true
    // "noUncheckedIndexedAccess": true, // 暂时禁用
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
