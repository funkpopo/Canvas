# 生产环境配置
ENVIRONMENT=production

# 应用配置
APP_PORT=8000
API_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000

# 数据库配置 - 生产环境使用MySQL
DATABASE_TYPE=mysql
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_NAME=canvas
DATABASE_USER=canvas
DATABASE_PASSWORD=
MYSQL_ROOT_PASSWORD=

# Redis配置 - 生产环境启用
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=20
REDIS_POOL_TIMEOUT=30

# 安全配置 - 使用强密钥
JWT_SECRET_KEY=
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
SESSION_SECRET_KEY=

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/logs/canvas.log

# 调试模式
DEBUG=false
AUTO_MIGRATE=true
